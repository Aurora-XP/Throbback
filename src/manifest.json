{
    "manifest_version": 2,

    "name": "Chromescape Navigator",
    "description": "Show the Netscape Navigator loading animation",
    "version": "1.0.0",

    "icons": {
        "16": "logo/logo16.png",
        "48": "logo/logo48.png",
        "128": "logo/logo128.png"
    },
    "browser_action": {
        "default_icon": "icon-frames/frame_0.png"
    },
    "background": {
        "scripts": ["script.js"]
    },
    "permissions": [
        "activeTab"
    ]
}